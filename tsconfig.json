{
    "compilerOptions": {
      "module": "commonJs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "lib": ["es2015", "DOM"],
      "target": "ES2015",
      "declaration": true,
      "esModuleInterop": true,
      "strictNullChecks": true
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "./node_modules/",
      "./test/",
      "./dist/"
    ],
    "typedocOptions": {
      "entryPoints": ["src"],
      "out": "docs"
    }
  }
